{
  "name": "can-hot",
  "version": "0.1.1",
  "description": "Hot reloading for canjs components",
  "main": "can-hot.js",
  "files": [
    "can-hot.js",
    "app",
    "index.html",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "start": "watchalive",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whitecolor/can-hot.git"
  },
  "keywords": [
    "can",
    "canjs",
    "hot",
    "reload",
    "hrm"
  ],
  "author": "whitecolor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whitecolor/can-hot/issues"
  },
  "homepage": "https://github.com/whitecolor/can-hot#readme",
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "can": "^2.3.11",
    "jquery": "^2.1.4",
    "steal": "^0.13.2",
    "steal-hmr": "^0.1.0",
    "watchalive": "^1.1.4",
    "watchalive-less": "^0.1.0"
  },
  "system": {
    "envs": {
      "can-hot-dev": {
        "baseURL": "app"
      }
    },
    "npmAlgorithm": "flat",
    "transpiler": "babel",
    "babelOptions": {
      "blacklist": []
    },
    "map": {
      "xxx": "yyy"
    },
    "npmIgnore": [
      "watchalive",
      "watchalive-less",
      "babel-core",
      "babel-preset-es2015",
      "babel-preset-stage-0"
    ]
  },
  "watchalive": {
    "data": true,
    "skip": ["node_modules/**", "package.json"],
    "plugin": [
      "less",
      ["*.js",
        "babel-core",
        {
          "presets": [
            "es2015",
            "stage-0"
          ]
        }
      ]
    ]
  }
}
