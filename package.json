{
  "name": "can-hot",
  "version": "0.1.0",
  "description": "Hot reloading for canjs components",
  "main": "can-hot.js",
  "files": [
    "can-hot.js",
    "app",
    "index.html",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "start": "watchalive",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whitecolor/can-hot.git"
  },
  "keywords": [
    "can",
    "canjs",
    "hot",
    "reload",
    "hrm"
  ],
  "author": "whitecolor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whitecolor/can-hot/issues"
  },
  "homepage": "https://github.com/whitecolor/can-hot#readme",
  "devDependencies": {
    "can": "^2.3.11",
    "jquery": "^2.1.4",
    "steal": "^0.13.2",
    "steal-hmr": "^0.1.0",
    "watchalive": "^1.1.3",
    "watchalive-less": "^0.1.0"
  },
  "system": {
    "npmAlgorithm": "flat",
    "transpiler": "babel",
    "babelOptions": {
      "blacklist": []
    },
    "map": {},
    "npmIgnore": [
      "watchalive",
      "watchalive-less"
    ]
  },
  "watchalive": {
    "data": true,
    "plugin": [
      "less"
    ]
  }
}
